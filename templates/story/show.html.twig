{% extends 'base.html.twig' %}

{% block title %}{{ story.title }}{% endblock %}

{% block body %}
    <section id="story-header">
        <div class="container">
            <h1>{{ story.title }}</h1>
            <img loading="lazy" class="favorite-img" src="{{ story.image }}" alt="illustration"/>
            <div class="favorite">
                <i class="fa-solid fa-heart"></i>
                <p class="favorite-text">Mettre en favoris</p>
            </div>
        </div>
    </section>

    <section id="story-text">
        <div class="container">
            <p class="story-p">{{ story.text }}</p>
        </div>
    </section>
{% endblock %}