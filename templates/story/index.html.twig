{% extends 'base.html.twig' %}

{% block title %}Nouvelles{% endblock %}

{% block body %}
    <section id="stories-title">
        <div class="container">
            <h1>Nouvelles</h1>
        </div>
    </section>

    <section id="stories-list">
        <div class="container">
            <h2 class="h1 title-line home-h2">Les Aventures de Guillaume</h2>
            <div class="row">
                {% for story in stories %}
                    {% include "story/_content.html.twig" %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
