{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="title-container">
        <h1 class="title-line">Réinitialisation du mot de passe</h1>
    </div>
    <div class="container flex-container-reverse">
        <div class="form-container">
            {{ form_start(resetPasswordForm) }}
            <div class="form-group">
                {{ form_row(resetPasswordForm.plainPassword, {
                    label: 'Mot de passe',
                    attr: {'class': 'form-control'}
                }) }}
            </div>
            <div class="form-btn">
                <button class="btn btn-dark" type="submit">
                    Envoyer
                </button>
            </div>
            {{ form_end(resetPasswordForm) }}
        </div>
        <div class="form-logo">
            <img loading="lazy" src="{{ asset('images/logobleu.png') }}" alt="logo-baptiste-raconte"/>
        </div>
    </div>
{% endblock %}

