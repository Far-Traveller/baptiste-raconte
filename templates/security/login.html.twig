{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-warning mt-4">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    </div>
    <div class="title-container">
        <h1 class="title-line">Connexion</h1>
    </div>
    <div class="container flex-container-reverse">
        <div class="form-container">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <label for="inputEmail">Adresse e-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="sheldon_cooper@tbbt.fr" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="form-btn">
                    <button class="btn btn-dark" type="submit">
                        Connexion
                    </button>
                    <a class="btn-forgotten-password" href="{{ path('forgotten_password') }}">Mot de passe oubli√©</a>
                </div>
            </form>
        </div>
        <div class="form-logo">
            <img loading="lazy" src="{{ asset('images/logobleu.png') }}" alt="logo-baptiste-raconte"/>
        </div>
    </div>

{% endblock %}
